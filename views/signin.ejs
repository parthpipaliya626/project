<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignIn Page</title>

</head>

<body>
    <!-- navbar -->
    <div class="wrapper">
        <h1 class="heading"><span>SCALE</span>TECH</h1>

        <div class="container">
            <!-- company logo -->
            <div class="logo">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR7H0u13wFrskVIje5pLMN3kCExmMAQzYOKaQwMYiHNT03LUJIiaoCkTBPqjwRpund-0hU&usqp=CAU"
                    alt="scaletech logo" height="400px" width="400px">
            </div>

            <!-- signin div -->
            <div class="details">
                <form action="/signin" method="post" onsubmit=" ">
                    <h1>Sign In</h1>

                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter Your Email Address" required>

                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter Your Password" required>

                    <!-- submit form -->
                    <input type="submit" value="Sign In">
                    <!-- user signup page url -->
                    <p>Don't Have account?  <a href="/signup">Create Account</a></p>

                </form>
            </div>
        </div>
    </div>


</body>

</html>

<!-- script format -->
<script>
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    function validateForm() {
        if (password !== confirmPassword) {
            alert("Please Enter the same password");
            focus('password');
            return false;
        }
        return true;
    }
</script>

